<%= form_for @chart, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :app_id, value: @chart.app_id || params[:chart][:app_id] %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :config, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :config, :class => 'text_area', :size => '20x10' %>
      <%= link_to t('labels.docs'), '#' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                chart_return_path(@chart), :class => 'btn' %>
  </div>
<% end %>
