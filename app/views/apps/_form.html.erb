<%= form_for @app, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id, value: @app.user_id || current_user.id %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :app_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :app_key, :class => 'text_field', :size => 50 %>
    </div>
  </div>

  <%= render partial: 'charts', object: @app.charts %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profile_path, :class => 'btn' %>
  </div>
<% end %>
