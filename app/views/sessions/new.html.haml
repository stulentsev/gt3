.page-header
  %h1= t('helpers.links.login')

= form_tag sessions_create_path, :class => 'form-horizontal' do
  .control-group
    = label_tag :email, nil, class: 'control-label'
    .controls
      = text_field_tag :email, params[:email], class: 'text_field'

  .control-group
    = label_tag :password, nil, class: 'control-label'
    .controls
      = password_field_tag :password


  .form-actions
    = submit_tag 'Log in', class: 'btn btn-primary'
